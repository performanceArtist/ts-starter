{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "lib": [],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
